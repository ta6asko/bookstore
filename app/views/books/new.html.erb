	-= form_for :books do |f| 
	
	%p
		= f.label :title %br
    = f.text_field :title 
  
  %p
		= f.label :short_description %br
    = f.text_area :short_description 
	
	%p
		= f.label :full_description %br
    = f.text_area :full_description

  %p
    = f.label :authors %br
    = f.text_field :authors 

	%p
    = f.label :categories %br
    = f.text_field :categories 

	%p
    = f.label :image %br
    = f.text_field :image 

	%p
    = f.label :price %br
    = f.text_field :price 

  %p
    = f.submit 

