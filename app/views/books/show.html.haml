.book_show
  = @book.title
  by
  - book.authors.each do |author|
    %strong
      by #{author.first_name} #{author.last_name}
    %br
  = image_tag(@book.image, size: "270x150", class: "cover")
  = @book.full_description
  %br
  = @book.price
  = link_to 'ADD TO CART', books_path
= render "welcome"
