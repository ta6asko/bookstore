.container-fluid
  .row-fluid
    %h2
      = @book.title
    .col-md-3
      = image_tag(@book.image, size: "270x150", class: "cover")
    .col-md-9
      .col-md-9
        .col-md-3
          %h4
            $ #{@book.price}
        .col-md-3
          / = form_for @, url: books_path, html: {} do |f|
          /   = f.text_field :, value: 1, class: ""
          /   = f.hidden_field :book_id, value: @book.id
          /   = f.submit 'ADD TO CART', class: "btn btn-default"
          = link_to 'ADD TO CART', new_book_rating_path(@book), class: "btn btn-default"
      .col-md-9
        = @book.full_description
  .row-fluid
    .col-md-12
      Reviews
      = link_to 'Add review for this book', new_book_rating_path(@book)
  .row-fluid
    .col-md-4
      stars
    .col-md-4
      comment_title
    .col-md-4
      comment_date
  .row-fluid
    .col-md-12
      BY comment_author
  .row-fluid
    .col-md-12
      comment
