.container
  .row
    .col-md-12
      %h2
        = @book.title
    .row
      .col-md-12
        .col-md-4
          = image_tag(@book.image, size: "330x250", class: "cover")
        .col-md-8
          .row
            .col-md-2
              %h4
                #{number_to_currency(@book.price)}
            .col-md-6
              = form_for @line_item, url: line_items_path(book_id: @book.id) do |f|
                .col-md-3.item_count_input= f.text_field :quantity, :value => '1'
                .col-md-3= f.submit 'Add to Cart', class: "btn btn-default"
        .col-md-6
          = @book.full_description.first(500) + '...'
  .row
    .col-md-12
      .margin_top_20.stars
        %h4
          Reviews
          = link_to 'Add review for this book', new_book_comment_path(@book)
          %br
        - @book.comments.each do |comment|
          = rating_for comment, "title", :disable_after_rate => true
          = comment.title
          %br
          = comment.user_name
          %br
          = comment.comment



