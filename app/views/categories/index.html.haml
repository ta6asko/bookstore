.container
  .row
    .col-md-9
      %h3
        = t("categories.shop")
      .row
        %ul
          - @books.each do |book| 
            %li.li_shop
              = image_tag(book.image, size: "150x100")
              %p.book_title= link_to book.title, book_path(book) 
              %p.book_price #{number_to_currency(book.price)}
      = paginate @books, :theme => 'twitter-bootstrap-3'
    .col-md-3 
      = t('categories.shop_by_categories')
      %ul
        - Category.all.each do |category|
          %li
            %p= link_to category.name, category_path(category)

   