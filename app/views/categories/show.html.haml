.container-fluid
  %ol.breadcrumb
    %li= link_to "HOME", books_path
    %li= link_to "SHOP", categories_path
    %li.active #{@category.name}
  .row-fluid
    .col-md-9
      %h2
        Categories - #{@category.name}
      .row
        .col-md-9
          - @books.each do |book|
            .col-md-4
              = image_tag(book.image, size: "150x100")
              %p.book_title= link_to book.title, book_path(book) 
              %p.book_price $ #{book.price} 
    .col-md-3
      %h2  
        Categories
      %ul
        - @categories.each do |category|
          %li
            %p= link_to category.name, category_path(category)

   