.container
  .row
    .col-md-12
      %h2
        New review for
        = link_to @book.title, book_path(@book)
  .row
    .col-md-12
      Rating:
  .row
    .col-md-12
      = form_for :rating do |f|
        .row
          .col-md-12
            .margin_top_20
              Text review:
          .col-md-12
            = f.text_area :comment, class: "comment_text_field"
          .col-md-12
            .margin_top_20
              = f.submit 'ADD', class: "btn btn-default"
              or
              = link_to "Cancel", book_path(@book), class: "btn btn-default"
    