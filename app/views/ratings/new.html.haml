.container-fluid
  .row-fluid
    .col-md-12
      %h2
        New review for
        = link_to @book.title, book_path(@book)
  .row-fluid
    .col-md-12
      Rating:
    .col-md-12
      = form_for :rating do |f|
        .col-md-12
          Text review:
        .col-md-12
          = f.text_area :comment, class: "comment_text_field"
        .col-md-12
          = f.submit 'ADD', class: "btn btn-default"
          or
          = link_to "Cancel", book_path(@book), class: "btn btn-default"
    